<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.ims.aksisstent02.activities.MenuActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/btnEnter"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="100dp"
        android:text="@string/btnsuchen"
        app:layout_constraintEnd_toEndOf="@+id/editSuche"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStupla"
        android:layout_width="267dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:text="@string/stundenplan"
        app:layout_constraintEnd_toEndOf="@+id/btnNoten"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnNoten"
        app:layout_constraintTop_toBottomOf="@+id/btnNoten" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="267dp"
        android:layout_height="57dp"
        android:layout_marginBottom="168dp"
        android:layout_marginTop="8dp"
        android:text="Einstellungen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnStupla"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnStupla"
        app:layout_constraintTop_toBottomOf="@+id/btnStupla"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNoten"
        android:layout_width="267dp"
        android:layout_height="57dp"
        android:layout_marginTop="176dp"
        android:text="@string/noten"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewSchnitt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/notenschnitt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/nxt_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLektion" />

    <TextView
        android:id="@+id/viewLektion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/nxt_lektion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />

    <EditText
        android:id="@+id/editSuche"
        android:layout_width="267dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/btnNoten"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnNoten"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>
